{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist/esm",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./dist/types",
    "paths": {
      "rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
    }
  },
  "include": ["src/**/*", "tests"],
  "exclude": [
    "node_modules",
    "rollup.config.mjs",
    "eslint.config.mjs",
    "vitest.config.ts",
    "dist"
  ]
}
